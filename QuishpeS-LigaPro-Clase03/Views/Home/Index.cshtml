<style>
    /*Codigo ayudado de chatgpt para centrar imagenes y el tamaño y cambiar el color de las flechas del carrusel*/
    #carouselExample {

        max-width: 700px;
        margin: auto;
    }

    .carousel-item {
        text-align: center; /* Centra horizontalmente */
        height: 400px;
        background-color: #f8f9fa; /* Color de fondo opcional */
        position: relative;
    }

        .carousel-item img {
            max-height: 100%;
            max-width: 100%;
            object-fit: contain;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%); /* Centra vertical y horizontal */
        }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        filter: brightness(0); /* Íconos en negro */
    }

    .carousel-control-prev,
    .carousel-control-next {
        width: 50px;
        height: 50px;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(255, 255, 255, 0.7);
        border-radius: 50%;
    }
</style>

<!--Carrusel de bootstrap para colocar las imagenes de los equipos-->

<div id="carouselExample" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Imagenes/CD El Nacional.png" alt="Primer Slide">
        </div>
        <div class="carousel-item">
            <img src="~/Imagenes/Liga_Deportiva_Universitaria_de_Quito.png" alt="Segundo Slide">
        </div>
        <div class="carousel-item">
            <img src="~/Imagenes/Barcelona_Sporting_Club_Logo.png" alt="Tercer Slide">
        </div>
        <div class="carousel-item">
            <img src="~/Imagenes/Mushuc_Runa_SC.png" alt="Tercer Slide">
        </div>
        <div class="carousel-item">
            <img src="~/Imagenes/559X580.png" alt="Tercer Slide">
        </div>
        <div class="carousel-item">
            <img src="~/Imagenes/EscudoCSEmelec.png" alt="Tercer Slide">
        </div>
    </div>

    
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Anterior</span>
    </button>

    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Siguiente</span>
    </button>
</div>
